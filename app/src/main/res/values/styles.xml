<resources>

    <style name="TextStyle" parent="@android:style/TextAppearance.Medium">

    </style>

    <style name="timer_text" parent="TextStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">70sp</item>
    </style>

    <style name="list_header" parent="TextStyle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="list_item" parent="TextStyle">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="list_item_sub" parent="TextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="list_item_check">
        <item name="android:padding">10dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:theme">@style/CheckBoxAppTheme</item>
        <item name="android:buttonTint">@color/colorPrimaryDark</item>
    </style>

    <style name="CheckBoxAppTheme">
        <item name="android:colorAccent">@color/colorPrimaryDark</item>
    </style>


    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


</resources>
